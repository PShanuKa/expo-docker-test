{
  "expo": {
    "name": "SyncCentral",
    "slug": "SyncCentral",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/SyncCentral.png",
    "scheme": ["SyncCentral"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/SyncCentral.png",
        "backgroundColor": "#ffffff"
      },
      "package": "ca.microcloud360.synccentral",
      "versionCode": 3
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Poppins-Regular.ttf"]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
      // [
      //   "@sentry/react-native/expo",
      //   {
      //     "organization": "pasindu-m0",
      //     "project": "4508860855091200",
      //     "url": "https://sentry.io/",
      //     "experimental_android": {
      //       "enableAndroidGradlePlugin": true,
      //       "autoUploadProguardMapping": true,
      //       "includeProguardMapping": true,
      //       "dexguardEnabled": true,
      //       "uploadNativeSymbols": true,
      //       "autoUploadNativeSymbols": true,
      //       "includeNativeSources": true,
      //       "includeSourceContext": true
      //     }
      //   }
      // ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "20a0bbb8-9b49-4fba-adde-053b625bafed"
      }
    }
  }
}
